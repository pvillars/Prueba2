<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.anpetrus.prueba2.EventActivity"
    tools:showIn="@layout/activity_event"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/lucho_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/detailImageIv"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailNameTv"
        android:text="LUCHO JARA EN VIVO!!"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailDateStartTv"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="01-04-2017"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailTimeStartTv"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="21:00 hrs"/>
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/detailDescriptionTv"
        android:text="Ven a disfrutar una agrade velaada Ven a disfrutar una agrade velaad Ven a disfrutar una agrade velaad, Ven a disfrutar una agrade velaadVen a disfrutar una agrade velaad Ven a disfrutar una agrade velaad Ven a disfrutar una agrade velaad"/>

</LinearLayout>
</LinearLayout>
